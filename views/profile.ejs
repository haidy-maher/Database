<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- CSS LINK -->
    <link rel="stylesheet" href="../css/layout.css">
    <link rel="stylesheet" href="../css/create-edit.css">

    <!-- Font awesome -->
    <script src="https://kit.fontawesome.com/6b11d4a153.js" crossorigin="anonymous"></script>
    <!-- Font -->
    <!-- FONT 1 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Grandiflora+One&family=Rethink+Sans:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,800&family=Silkscreen&display=swap"
        rel="stylesheet">
</head>

<style>
    .collapsible {
        background-color: #777;
        color: white;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
    }

    .container {
        width: 100%;
        padding: 50px;
        display: flex;
        flex-direction: column;
        align-content: center;
        justify-content: center;

    }

    .active,
    .collapsible:hover {
        background-color: #555;
    }

    .collapsible:after {
        content: '\002B';
        color: white;
        font-weight: bold;
        float: right;
        margin-left: 5px;
    }

    .active:after {
        content: "\2212";
    }

    .contentt {
        display: none;
        /* Hide content by default */
        padding: 0 18px;
        overflow: hidden;
        background-color: #f1f1f1;
        /* width: 80%; */
    }

    .button input:hover {
        background-color: hsl(257, 11%, 16%);
    }

    .button input,
    .remove-member-button {
        padding: 10px 20px;
        background-color: hsl(257, 11%, 16%);
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        margin-bottom: 25px;
    }
</style>

<body>
    <%- include('dashboardNav.ejs') %>

        <!-- Main -->
        <div class="main">
            <div class="header">
                <div class="title">
                    <h3>Create Sessions</h3>
                </div>
            </div>

            <div class="container">
                <button type="button" class="collapsible">General Info</button>
                <div class="contentt">

                    <div class="form-group">
                        <label for="uniID">University ID</label>
                        <input type="text" id="uniID" name="uniID">
                    </div>
                    <div class="form-group">
                        <label for="level">Level</label>
                        <input type="text" id="level" name="level">
                    </div>
                    <div class="form-group">
                        <label for="gpa">GPA</label>
                        <input type="number" id="gpa" name="gpa">
                    </div>
                    <div class="input-field button">
                        <input type="submit" value="Register Now">
                    </div>
                </div>

                <button type="button" class="collapsible">Skills</button>
                <div class="contentt">
                    <div class="form-group">
                        <label for="cRange">C</label>
                        <input type="range" id="cRange" name="cRange" min="1" max="5">
                    </div>
                    <div class="form-group">
                        <label for="cppRange">C++</label>
                        <input type="range" id="cppRange" name="cppRange" min="1" max="5">
                    </div>
                    <div class="form-group">
                        <label for="pythonRange">Python</label>
                        <input type="range" id="pythonRange" name="pythonRange" min="1" max="5">
                    </div>



                    <div class="form-group">
                        <label for="dpKnown">DP</label>
                        <input type="radio" id="dpKnown" name="dpKnown" value="true"> Yes
                        <input type="radio" id="dpNotKnown" name="dpKnown" value="false"> No
                    </div>
                    <div class="form-group">
                        <label for="greedyKnown">Greedy</label>
                        <input type="radio" id="greedyKnown" name="greedyKnown" value="true"> Yes
                        <input type="radio" id="greedyNotKnown" name="greedyKnown" value="false"> No
                    </div>
                    <div class="form-group">
                        <label for="divideConquerKnown">Divide and conquer</label>
                        <input type="radio" id="divideConquerKnown" name="divideConquerKnown" value="true"> Yes
                        <input type="radio" id="divideConquerNotKnown" name="divideConquerKnown" value="false"> No
                    </div>
                    <div class="form-group">
                        <label for="bruteForceKnown">Brute force</label>
                        <input type="radio" id="bruteForceKnown" name="bruteForceKnown" value="true"> Yes
                        <input type="radio" id="bruteForceNotKnown" name="bruteForceKnown" value="false"> No
                    </div>

                    <div class="input-field button">
                        <input type="submit" value="Register Now">
                    </div>
                </div>

                <button type="button" class="collapsible">Contact Info</button>
                <div class="contentt">
                    <div class="form-group">
                        <label for="vjudgeUsername">vJudge Username</label>
                        <input type="text" id="vjudgeUsername" name="vjudgeUsername">
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber">Phone Number</label>
                        <input type="text" id="phoneNumber" name="phoneNumber">
                    </div>
                    <div class="form-group">
                        <label for="account">Account</label>
                        <input type="text" id="account" name="account">
                    </div>

                    <div class="input-field button">
                        <input type="submit" value="Register Now">
                    </div>
                </div>
            </div>

</body>

<script>


    async function fetchProfileData() {
        const profileId = '658c700b1f4acc92cb76031f'; // Hardcoded profile ID

        try {
            const response = await fetch(`/getProfile/${profileId}`);

            if (!response.ok) {
                throw new Error(`Failed to fetch: ${response.status}`);
            }

            const data = await response.json();


            // document.getElementById('studentId').value = profileData.generalInfo.studentId || '';
            document.getElementById('uniID').value = data.generalInfo.universityID || '';
            document.getElementById('level').value = data.generalInfo.level || '';
            document.getElementById('gpa').value = data.generalInfo.GPA || '';
            document.getElementById('vjudgeUsername').value = data.contactInfo.vjudgeUsername || '';
            document.getElementById('phoneNumber').value = data.contactInfo.phoneNumber || '';
            document.getElementById('account').value = data.contactInfo.account || '';
            document.getElementById('cRange').value = data.programmingLanguages.C || '';
            document.getElementById('cppRange').value = data.programmingLanguages.Cpp || '';
            document.getElementById('pythonRange').value = data.programmingLanguages.Python || '';

            document.getElementById('dpKnown').checked = data.algorithmKnown.DP === 'true';
            document.getElementById('dpNotKnown').checked = data.algorithmKnown.DP === 'false';

            document.getElementById('greedyKnown').checked = data.algorithmKnown.Greedy === 'true';
            document.getElementById('greedyNotKnown').checked = data.algorithmKnown.Greedy === 'false';

            document.getElementById('divideConquerKnown').checked = data.algorithmKnown['Divide and conquer'] === 'true';
            document.getElementById('divideConquerNotKnown').checked = data.algorithmKnown['Divide and conquer'] === 'false';

            document.getElementById('bruteForceKnown').checked = data.algorithmKnown['Brute force'] === 'true';
            document.getElementById('bruteForceNotKnown').checked = data.algorithmKnown['Brute force'] === 'false';



        } catch (error) {
            console.error('Error fetching profile data:', error);
            // Handle error, e.g., show an error message to the user
        }
    }

    // Call fetchProfileData when the page loads
    document.addEventListener('DOMContentLoaded', () => {
        fetchProfileData();
    });



    document.addEventListener('DOMContentLoaded', function () {
        var coll = document.getElementsByClassName("collapsible");
        var i;

        for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var content = this.nextElementSibling;
                if (content.style.display === "block") {
                    content.style.display = "none";
                } else {
                    content.style.display = "block";
                }
            });
        }
    });
</script>


</html>